<div class="cd-dashboard">
  <div class="row">
    <div class="my-dojos">
      <legend>{@i18n key="Events"/}</legend>
      <div class="row">
        <div class="col-md-12 table-responsive">
          <table id="dojoEventsTable" class="table cd-grid-table">
            <thead>
              <tr>
                <th>{@i18n key="Event"/}</th>
                <th>{@i18n key="Date"/}</th>
                <th>{@i18n key="Type"/}</th>
                <th>{@i18n key="For"/}</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <tr ng-repeat="event in events">
                <td>{{ event.name }}</td>
                <td>{{ event.date }}</td>
                <td>{{ event.type }}</td>
                <td>{{ event.for }}</td>
                <td class="pointer"><a ui-sref="applyForEvent({eventId:event.id})">{@i18n key="Apply"/}</a></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="row col-lg-6 col-lg-offset-4">
      <pagination total-items="totalItems" ng-change="pageChanged()" items-per-page="itemsPerPage" ng-model="pageNo" class="pagination-sm" boundary-links="true"></pagination>
    </div>
  </div>
</div>
