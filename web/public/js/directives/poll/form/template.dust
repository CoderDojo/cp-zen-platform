<form id="pollForm" name="pollForm" role="form"
    novalidate angular-validator angular-validator-submit="save()"
    class="row form-group form-inline full-width cd-poll-form">
  <label for="answer" class="">{{ question }}</label>
  <div class="input-group">
    <input type="number" ng-model="answer" name="answer" class="form-control"/>
    <div class="input-group-btn">
      <button class="btn btn-primary" type="submit">{{ buttonText }}</button>
    </div>
  </div>
</form>
