<span class="cd-action-bar-popup-item" ng-class="{'cd-action-bar-popup-item--active': $ctrl.showPopup === true}">
  <div class="cd-action-bar-popup-item__toggle" ng-click="$ctrl.handleClick($event)">
    <i class="fa fa-{{ $ctrl.icon }}"></i>
    <span class="hidden-xs">{{ $ctrl.title }}</span>
  </div>
  <div class="cd-action-bar-popup-item__popup" ng-class="{'cd-action-bar-popup-item__popup--visible': $ctrl.size !== 'full-width'}" ng-transclude></div>
</span>
<div class="cd-action-bar-popup-item__popup cd-action-bar-popup-item__full-width-popup" ng-class="{'cd-action-bar-popup-item__full-width-popup--visible': $ctrl.size === 'full-width'}" ng-transclude></div>
