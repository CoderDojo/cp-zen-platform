<div class="cd-badge-cert">
  <h2>{{ $ctrl.badge.name }}</h2>
  <div class="cd-badge-cert__info">
    <div class="cd-badge-cert__image">
      <img ng-src="{{ $ctrl.badge.imageUrl }}" />
    </div>
    <p class="cd-badge-cert__description" ng-bind="$ctrl.badge.consumerDescription"></p>
  </div>
  <div ng-if="$ctrl.badge.assertion.evidence">
    <h3>{@i18n key="Evidence"/}</h3>
    <p class="cd-badge-cert__evidence" ng-bind="$ctrl.badge.assertion.evidence"></p>
  </div>
</div>
